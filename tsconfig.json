{
  "compilerOptions": {
    "target": "es5", // Or a higher version, such as "es2018" depending on your environment
    "module": "commonjs", // For Node.js projects; use "es2015" or higher for ES modules
    "lib": ["dom", "esnext"], // Include libraries
    "declaration": true, // Generates corresponding '.d.ts' file
    "outDir": "./dist", // Output directory for the compiled files
    "rootDir": "./src", // Root directory of your TypeScript files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables compatibility with Babel/ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure case sensitivity on file names
  },
  "include": ["src/**/*"], // Include all files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directory from the compilation
}
